#!/usr/bin/env bash

if [ ! -z "$1" ];
then
  echo "Must pass argument for the QA box you wish to add your ssh key to"
  echo "USAGE: key_to_remote my-server-name-or-ip"
  exit
fi
box=$1

cat ~/.ssh/id_rsa.pub | sshpass -p '11bruins' ssh root@${box} 'cat >> .ssh/authorized_keys'

echo "\n Added your key to $box \n"
