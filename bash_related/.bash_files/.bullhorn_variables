echo 'Loading ~/.bash_files/.bullhorn_variables'

export SENCHA_CMD="/home/steveerf/bin/Sencha/Cmd/4.0.5.87"

#Bullhorn Variables
export BASE="$WORKSPACE/bullhorn/bh-env"
export MONTAGE_HOME="$BASE/montage"
export STRIPES_HOME="$BASE/stripesjs"
export MOSAIC_HOME="$BASE/mosaic"

export CF_MONTAGE_DIST="$BASE/CFusionMX7/wwwroot/BullhornSTAFFING/Script/lib/montage/dist"
export CF_STRIPES_DIST="$BASE/CFusionMX7/wwwroot/BullhornSTAFFING/Script/lib/stripesjs/dist"
export MOSAIC_MONTAGE_DIST="$MOSAIC_HOME/lib/montage/dist"
export MOSAIC_STRIPES_DIST="$MOSAIC_HOME/lib/stripesjs/dist"

#Environment/Build Variables
export DEV_TOOLS=/devTools
export ANT_HOME=/usr/bin/ant
export ANT_ARGS="-noclasspath -lib $HOME/antlib"
export JAVA_OPTS=-Dbullhorn.sandbox=dev
export JAVA_HOME=/usr/lib/jvm/java-6-openjdk-amd64
export JDK_HOME=/usr/lib/jvm/java-8-oracle
export GRADLE_HOME=$DEV_TOOLS/gradle-1.11/bin
export GRAILS_HOME=$DEV_TOOLS/grails-2.1.5

#Helper Aliases
alias nop="cd $BASE/novo-dev/novo && git stash && novo update && git stash pop && cd -"

#Add executables to PATH
export PATH=$PATH:$Ant_home:$GRADLE_HOME:$GRADLE_HOME/bin:/opt/SenchaSDKTools-2.0.0-beta3:$SENCHA_CMD

#Aliases
alias cf="cd $BASE/CFusionMX7"
alias cs="cd $BASE/core-services/projects"
alias mo="cd $BASE/mosaic"
alias mon="cd $MONTAGE_HOME"
alias st="cd $STRIPES_HOME"
alias no="cd $BASE/novo-dev/novo"
alias base="cd $BASE"

alias cpmon="cp $MONTAGE_HOME/dist/montage.* $MOSAIC_MONTAGE_DIST && cp $MONTAGE_HOME/dist/montage.* $CF_MONTAGE_DIST"

# QA box logins
alias met="ssh root@metrics"
alias vol="ssh root@volkemo-backend"

