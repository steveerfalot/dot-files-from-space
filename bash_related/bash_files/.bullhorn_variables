#!/usr/bin/env bash
export WORKSPACE=REPLACE_ME
#Bullhorn Variables
export BASE="$WORKSPACE/bh-env"
export NOVO_DIR="$WORKSPACE/novo-dev"
export MONTAGE_HOME="$BASE/montage"
export MOSAIC_HOME="$BASE/mosaic"
export BOTS_HOME="$WORKSPACE/bots"
export BBO_HOME="$WORKSPACE/bbo"

export CF_MONTAGE_DIST="$BASE/CFusionMX7/wwwroot/BullhornSTAFFING/Script/lib/montage/dist"
export MOSAIC_MONTAGE_DIST="$MOSAIC_HOME/lib/montage/dist"

#Command Variables
export FRESH_NPM_INSTALL="rm -rvf node_modules && npm i"
export NOVO_CLEAN_COMMAND="cd $NOVO_DIR/novo && $FRESH_NPM_INSTALL"
export BBO_CLEAN_COMMAND="cd $BBO_HOME/backoffice-www && $FRESH_NPM_INSTALL"

#Environment/Build Variables
export DEV_TOOLS="/devTools"
export ANT_HOME="/usr/bin/ant"
export ANT_ARGS="-noclasspath -lib $DEV_TOOLS/antlib"
export JAVA_OPTS="-Dbullhorn.sandbox=dev"
#export JAVA_HOME=/usr/lib/jvm/java-6-oracle
export JAVA_HOME="/usr/lib/jvm/java-8-openjdk-amd64"
export JDK_HOME="/usr/lib/jvm/java-8-openjdk-amd64"
export GRADLE_HOME="$DEV_TOOLS/gradle-1.11/bin"
export GRAILS_HOME="$DEV_TOOLS/grails-2.1.5"
# export JAVACMD=/usr/lib/jvm/java-8-openjdk-amd64/bin/java

#Novo Aliases
alias ncs="$NOVO_CLEAN_COMMAND && npm start"
alias nc="$NOVO_CLEAN_COMMAND"
alias nct="$NOVO_CLEAN_COMMAND && npm run test:watch"
alias lbe="cd $NOVO_DIR/novo && rm -rvf node_modules/bh-elements && npm i ../bh-elements && npm start"
alias ne="cd $NOVO_DIR/novo-elements"

#BBO Aliases
alias bc="$BBO_CLEAN_COMMAND"
alias bcs="$BBO_CLEAN_COMMAND && npm start"
alias bct="$BBO_CLEAN_COMMAND && npm run test:watch"

#Bots Aliases
# TODO: deploy bots-rules-engine and kafka-forwarder to local tomcat

#Add executables to PATH
export PATH=$PATH:${ANT_HOME}:${GRADLE_HOME}:${GRADLE_HOME}/bin

#Aliases
alias base="cd $BASE"
alias cf="cd $BASE/CFusionMX7"
alias cs="cd $BASE/core-services/projects"
alias mo="cd $BASE/mosaic"
alias mon="cd $MONTAGE_HOME"
alias no="cd $WORKSPACE/novo-dev/novo"
alias bre="cd $BOTS_HOME/bots-rules-engine"
alias kf="cd $BOTS_HOME/kafka-forwarder"
alias bb="cd $BBO_HOME/backoffice"
alias bf="cd $BBO_HOME/backoffice-www"

alias cpmon="cp $MONTAGE_HOME/dist/montage.* $MOSAIC_MONTAGE_DIST && cp $MONTAGE_HOME/dist/montage.* $CF_MONTAGE_DIST"

# QA box logins
alias met="ssh root@metrics"
alias vol="ssh root@volkemo-backend"
alias bbl="ssh root@172.16.116.128"

